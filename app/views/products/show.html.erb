<%= raw @product.seo_tags %>
<section class="single_product_details_area d-flex pt-5 mt-5">

  <div class="single_product_thumb clearfix">
    <div class="product_thumbnail_slides owl-carousel">
      <%= image_tag @product.photo_url rescue nil%>
    </div>
  </div>

  <div class="single_product_desc clearfix" style="height: 700px; overflow: scroll; padding-top: 0px;">
    <p class="product-type-name"><%= @product.product_type.name %></p>
    <h2><%= @product.name %></h2>
    <h5 class="card-subtitle"> <%= @product.title %></h5>
    <p class="product-price">PKR <%= @product.price %></p>
    <p class="product-desc"><%= sanitize @product.description %></p>
    <p>Size : <%= @product.size %></p>
<!--    <p style="margin: 0px;"><b>Benefits</b> <%#= sanitize @product.benefits %></p>-->
<!--    <p> Ingredeints: <%#=  sanitize @product.ingredients %></p>-->
    <div class="select-box d-flex mt-10 mb-30">
      <%= form_with url: "/cart/add_to_cart/" + @product.id.to_s,model: @cert_product,method: :post do |form| %>
        <%= form.label :quantity, "Quantity" %>
        <%= form.number_field :quantity %>
        <div class="pt-4 cart-fav-box d-flex align-items-center">
          <% if current_client.present? %>
            <%= form.submit "Add to cart", class: "btn essence-btn" ,style: "background-color: green;" %> <a class="pl-4 btn essence-btn" style="color: white;"  href="#" onclick="redirectBack()">Back To Shopping</a>
          <% else %>
            <%= link_to "Add to cart", new_client_session_path, class: "btn essence-btn" ,style: "background-color: green;"%> <a class="pl-4 btn essence-btn" style="color: white;" href="#" onclick="redirectBack()">Back To Shopping</a>
          <% end %>
        </div>
      <% end %>
    </div>
    <% if @product.faq %>
      <div class="mt-4 mb-4">
        <div class="accordion" id="myAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button type="button" class="accordion-button collapsed h-f-s" style="background: white;" data-bs-toggle="collapse" data-bs-target="#collapseOne">Frequently Asked Questions
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#myAccordion">
              <div class="card-body">
                <p><%= sanitize @product.faq %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<script>
    function redirectBack() {
        window.location = "/";
    }
</script>
