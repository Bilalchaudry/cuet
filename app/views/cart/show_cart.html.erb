<style>
    .btn-hide {
        display: none;
    }
</style>
<main class="page">
  <a href="#" onclick="redirectBack()">Back To Shopping</a>
  <section class="shopping-cart dark pt-3 mt-2">
    <div class="container">
      <div class="block-heading">
        <h2 style="color: black !important;">Shopping Cart</h2>
        <p style="color: black;">Hey <span style="color: #006D77; !important;"><%= current_client.email %></span>, here are items you have selected.</p>
      </div>
      <% if @products.present? %>
        <div class="content">
          <div class="row">
            <div class="col-md-12 col-lg-8">
              <div class="items">
                <%= render "cart/products", products: @products %>
              </div>
            </div>
            <div class="col-md-12 col-lg-4">
              <div class="summary">
                <h3>Summary</h3>
                <div class="summary-item">
                  <span class="text">Subtotal</span><span id="subtotal" class="price"><%= @total %></span>
                </div>
                <div class="summary-item"><span class="text">Shipping</span><span id="shipping-fee" class="price"><%= @total.to_i > 999 ? 0 : 100 %></span></div>
                <div class="summary-item">
                  <span class="text">Total</span><span id="total" class="price"><%= @total.to_i > 999 ? 0 : @total.to_i + 100 %></span></div>
                <button id="check-btn" type="button" onclick="saveCart(<%= @cert.id %>)" class="btn btn-hide btn-primary btn-lg btn-block", style="background-color: #006D77;">Checkout
                  To proceed
                </button>
                <input type="radio" id="html" name="fav_language" class="mt-3" value="c_o_d" checked>
                 <label for="html">Cash on delivery</label><br>
                <p class="pt-1">Cash on bank is coming soon.</p>
                <%= form_with url: "/orders/create/#{@cert.id}", method: :post do %>
                  <%= submit_tag "Proceed", class: "btn btn-primary btn-lg btn-block w-100", style: "background-color: #006D77;" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
      <h5 class="white">No products are selected for order.</h5>
      <% end %>
    </div>
  </section>
</main>
<script>
    function redirectBack() {
        window.location = "/";
    }

    function setPrice(product_id, price) {
        let arr = []
        var i;
        var quantity = $('#p_' + product_id).val()
        document.getElementById('price_' + product_id).innerHTML = parseInt(quantity) * price
        var x = document.getElementsByClassName('product-prices')
        for (i = 0; i < x.length; i++) {
            arr.push(parseInt(x[i].innerHTML))
        }
        sum = arr.reduce((pv, cv) => pv + cv, 0);
        document.getElementById("subtotal").innerHTML = sum;
        if(sum < 1000) {
            sum+= 100;
        }
        if (sum > 999) {
            document.getElementById("shipping-fee").innerHTML = 0;
        }
        document.getElementById("total").innerHTML = sum;
        $("#check-btn").removeClass('btn-hide')
        $("#pay-btn").addClass('btn-hide')
    }

    function saveCart(c_id) {
        let products = []
        var x = document.getElementsByClassName('quantity-input')
        for (i = 0; i < x.length; i++) {
            quant = x[i].value
            id = x[i].id.split('_');
            products.push({
                id: id[1],
                quantity: quant
            })
        }
        $.ajax({
            type: "POST",
            dataType: "json",
            url: "/cart/update",
            data:
                {
                    products,
                    c_id
                }
            ,
            success: function () {
                $("#check-btn").addClass('btn-hide')
                $("#pay-btn").removeClass('btn-hide')

            }
        })
    }
</script>


