<style>
    .btn-hide {
        display: none;
    }
</style>
<main class="page">
  <a href="#" onclick="redirectBack()">Back To Shopping</a>
  <section class="shopping-cart dark">
    <div class="container">
      <div class="block-heading">
        <h2>Shopping Cart</h2>
        <p>Hey <%= current_client.email %>, here are items you have selected.</p>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-12 col-lg-8">
            <div class="items">
              <div class="product">
                <% @total = 0 %>
                <% @products.each do |product| %>
                  <div class="row">
                    <div class="col-md-3 pt-4">
                      <%= image_tag product.photo_url, class: "img-fluid mx-auto d-block image" %>
                    </div>
                    <div class="col-md-8">
                      <div class="info">
                        <div class="row">
                          <div class="col-md-4 product-name">
                            <div class="product-name">
                              <a href="/products/show/<%= product.id %>"><%= product.name %></a>
                              <div class="product-info">
                                <div>Size: <span class="value"><%= product.size %></span></div>
                                <div>Product Type: <span class="value"><%= product.product_type.name %></span></div>
                                <% @total = @total +  (@cert_products.find_by(product_id: product.id).quantity * product.price)%>
                                <div>Price: <span class="value"><%= product.price %></span></div>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-3 quantity">
                            <label for="quantity">Quantity:</label>
                            <input id="p_<%= product.id %>" onchange="setPrice(<%= product.id %>, <%= product.price %>)" type="number" value="<%= @cert_products.find_by(product_id: product.id).quantity %>" class="form-control quantity-input">
                          </div>
                          <div class="col-md-3 price">
                            <span class="product-prices" id="price_<%= product.id %>"><%= product.price * @cert_products.find_by(product_id: product.id).quantity %></span>
                          </div>
                          <div class="col-md-2 pt-4">
                            <span class="pb-2 btn btn-default" id="price_<%= product.id %>">
                              <%= link_to "Remove", delete_cart_product_path(:id => 1,:p_id =>1),  method: :delete %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
          <div class="col-md-12 col-lg-4">
            <div class="summary">
              <h3>Summary</h3>
              <div class="summary-item"><span class="text">Subtotal</span><span id="subtotal" class="price"><%=@total %></span>
              </div>
              <!--              <div class="summary-item"><span class="text">Discount</span><span class="price">$0</span></div>-->
              <div class="summary-item"><span class="text">Shipping</span><span class="price">0</span></div>
              <div class="summary-item"><span class="text">Total</span><span id="total" class="price"><%=@total %></span></div>
              <button id="check-btn" type="button" onclick="saveCart(<%= @cert.id %>)" class="btn btn-hide btn-primary btn-lg btn-block">Checkout
                To proceed
              </button>
              <a type="button"  data-method="post" id="pay-btn" href="/orders/create/<%= @cert.id %>" class="btn btn-primary btn-lg btn-block">Proceed</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<script>
  function redirectBack(){
      window.location = "/";
  }
    function setPrice(product_id, price) {
        let arr = []
        var i;
        var quantity = $('#p_' + product_id).val()
        document.getElementById('price_' + product_id).innerHTML = parseInt(quantity) * price
        var x = document.getElementsByClassName('product-prices')
        for (i = 0; i < x.length; i++) {
            arr.push(parseInt(x[i].innerHTML))
        }
        sum = arr.reduce((pv, cv) => pv + cv, 0);
        document.getElementById("subtotal").innerHTML = sum;
        document.getElementById("total").innerHTML = sum;
        $("#check-btn").removeClass('btn-hide')
        $("#pay-btn").addClass('btn-hide')
    }

    function saveCart(c_id) {
        let products = []
        var x = document.getElementsByClassName('quantity-input')
        for (i = 0; i < x.length; i++) {
            quant = x[i].value
            id = x[i].id.split('_');
            products.push({
                id: id[1],
                quantity: quant
            })
        }
       debugger
        $.ajax({
            type: "POST",
            dataType: "json",
            url: "/cart/update",
            data:
                {products,
                c_id}
            ,
            success: function () {
                $("#check-btn").addClass('btn-hide')
                $("#pay-btn").removeClass('btn-hide')

            }
        })
    }
</script>


